<?xml version="1.0" encoding="utf-8"?>
<!-- HOMEINFO Terminal Library Web Interface -->
<xs:schema  xmlns="http://xml.homeinfo.de/schema/terminallib"
            xmlns:xs="http://www.w3.org/2001/XMLSchema" version="1.0"
            targetNamespace="http://xml.homeinfo.de/schema/terminallib">

    <!-- Root element -->
    <xs:element name="terminallib" type="TerminalLibrary"/>


    <!-- Terminal library root type -->
    <xs:complexType name="TerminalLibrary">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                A terminal web API solution by HOMEINFO Digitale Informationssysteme GmbH
            </xs:documentation>
        </xs:annotation>
        <xs:choice>
            <xs:element name="terminal" type="Terminal" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="terminal_detail" type="TerminalDetail"/>
            <xs:element name="class" type="Class" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="domain" type="Domain" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="setup_operator" type="SetupOperator" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="administrator" type="Administrator" minOccurs="0" maxOccurs="unbounded"/>
        </xs:choice>
    </xs:complexType>


    <!-- Customer data -->
    <xs:complexType name="Customer">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                Terminal data for a certain customer
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="terminal" type="Terminal" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="cid" type="xs:integer" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="en">
                    The customer identifier
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="name" type="xs:string">
            <xs:annotation>
                <xs:documentation xml:lang="en">
                    The customer's full name
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>


    <!-- Basic terminal data -->
    <xs:complexType name="Terminal">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                Terminal information
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="cls" type="Class"/>
            <xs:element name="domain" type="Domain"/>
            <xs:element name="ipv4addr" type="IPv4Address"/>
            <xs:element name="virtual_display" type="xs:integer" minOccurs="0"/>
            <xs:element name="location" type="Address"/>
        </xs:sequence>
        <xs:attribute name="tid" type="xs:integer" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="en">
                    The terminal identifier
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="cid" type="xs:integer" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="en">
                    The customer identifier
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>


    <!-- Terminal data -->
    <xs:complexType name="TerminalDetail">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                More detailed terminal information
            </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="Terminal">
                <xs:sequence>
                    <xs:element name="status" type="TerminalStatus"/>
                    <xs:element name="uptime" type="xs:unsignedLong"/>
                    <xs:element name="screenshot" type="Screenshot" minOccurs="0"/>
                    <xs:element name="setup_operator" type="SetupOperator" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element name="administrator" type="Administrator" minOccurs="0" maxOccurs="unbounded"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>


    <!-- Terminal class -->
    <xs:complexType name="Class">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                Terminal class
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="full_name" type="xs:string">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            A verbose name
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="touch" type="xs:boolean" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            Flag whether it is a class with touch screen
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="id" type="xs:integer" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The unique ID of the class
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>


    <!-- Terminal domain -->
    <xs:complexType name="Domain">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                A terminal's domain
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:integer" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The unique ID of the domain
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>


    <!-- Termianl address -->
    <xs:complexType name="Address">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                Terminal address
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="street" type="xs:string"/>
            <xs:element name="house_number" type="xs:string"/>
            <xs:element name="city" type="xs:string"/>
            <xs:element name="zip_code" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>


    <!-- Screenshot data -->
    <xs:complexType name="Screenshot">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                A screen shot of a terminal
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:base64Binary">
                <xs:attribute name="timestamp" type="xs:dateTime" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The time, when the screenshot was taken
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="mimetype" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The screenshot picture's mime type
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    
    <!-- Messages -->
    <xs:complexType name="Message">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                Messages
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="text" type="Text">
                <xs:annotation>
                    <xs:documentation xml:lang="en">
                        The messages' body or content
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="code" type="xs:integer" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="en">
                    A unique message code
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
    
    
    <!-- Localized message text -->
    <xs:complexType name="Text">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                Localized text string
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="lang" type="xs:string" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The language of the text
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>


    <!-- Terminal status -->
    <xs:simpleType name="TerminalStatus">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                The status of the terminal
            </xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:string">
            <xs:enumeration value="UP"/>
            <xs:enumeration value="DOWN"/>
        </xs:restriction>
    </xs:simpleType>


    <!-- IPv4 address -->
    <xs:simpleType name="IPv4Address">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                An IPv4 address
            </xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:string">
            <xs:pattern
                value="(25[0-5]|2[0-4][0-9]|[0-1]?[0-9]?[0-9])\.(25[0-5]|2[0-4][0-9]|[0-1]?[0-9]?[0-9])\.(25[0-5]|2[0-4][0-9]|[0-1]?[0-9]?[0-9])\.(25[0-5]|2[0-4][0-9]|[0-1]?[0-9]?[0-9])"
            />
        </xs:restriction>
    </xs:simpleType>


    <!-- Terminal setup operator -->
    <xs:complexType name="SetupOperator">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                An operator that is allowed to setup terminals
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:integer" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The ID of the operator
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="annotation" type="xs:string">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            An optional annotation
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>


    <!-- Terminal administrator -->
    <xs:complexType name="Administrator">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                An administrator that is allowed to manage terminals
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:integer" use="required">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            The ID of the administrator
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="annotation" type="xs:string">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            An optional annotation
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

</xs:schema>
